<form bindsubmit="onSubmit">
  <view class='fenlei'>
    <text
      style="width: 132rpx; height: 90rpx; display: block; box-sizing: border-box; left: NaNrpx; top: NaNrpx">选择分类</text>
    <view class='select_box'>
      <view class='select' catchtap='selectTaps'>
        <text class='select_text'>{{selectDatas[indexs]}}</text>
        <image class='select_img {{shows&&"select_img_rotate"}}' src='../../images/三角形.png'></image>
      </view>
      <view class='option_box' style='height:{{shows?(selectDatas.length>5?300:selectDatas.length*60):0}}rpx;'>
        <text class='option' style='{{indexs==selectDatas.length-1&&"border:0;"}}' wx:for='{{selectDatas}}'
          wx:key='this' data-index='{{index}}' catchtap='optionTaps'>{{item}}</text>
      </view>
    </view>
  </view>
  <input name="name" class="ipt" placeholder="请输入菜谱名称" />
  <input name="source" class="ipt" placeholder="请输入需要的食材" />
  <input name="jiang" class="ipt" placeholder="请输入需要的配料" />
  <navigator url="/pages/addsteps/addsteps">
    <button type="primary" bindtap="add">添加步骤</button>
  </navigator>
  <view>展示一下成果图吧</view>
  <view class="upImg">
    <view class="upImgBox" wx:for="{{tempPath}}" wx:key="*this">
      <image src="{{item}}" bindtap="showBigImg" data-idx="{{index}}" mode="aspectFill"></image>
      <view class="close" data-idx="{{index}}" bindtap="clickDel">x</view>
    </view>
    <view wx:if="{{tempPath.length<9}}" class="upImgPic" bindtap="addImg">+</view>
  </view>
  <view class="btnGroup">
    <button type="primary" form-type="submit">确认发布</button>
    <button type="primary" plain form-type="reset">重置</button>
  </view>
</form>