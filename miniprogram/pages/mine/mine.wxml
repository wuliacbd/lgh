<!--pages/mine/mine.wxml-->
<view class="row" wx:for="{{dataList}}" wx:key="index" bindtap="getDetail" data-item="{{item}}">
  <view class="pic">
    <image src="{{item.Img}}"></image>
  </view>
  <view class="txt">
    <view class="title">{{item.Title}}</view>
    <view class="info">
      <text>作者：</text><text>{{item.Author}}</text><text space="ensp"></text>
    </view>
  </view>
</view>