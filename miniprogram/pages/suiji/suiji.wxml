<!--pages/suiji/suiji.wxml-->

<van-divider contentPosition="center" customStyle="color: #1989fa; border-color: #1989fa; font-size: 18px;">
  随机选择
</van-divider>
<view class='fenlei'>
  <text
    style="width: 132rpx; height: 90rpx; display: block; box-sizing: border-box; left: NaNrpx; top: NaNrpx">选择菜系</text>
  <!-- 下拉框 -->
  <view class='select_box'>
    <view class='select' catchtap='selectTaps'>
      <text class='select_text'>{{selectDatas[indexs]}}</text>
      <!-- <image class='words_img' src='../../images/sanjiao.png'></image> -->
      <image class='select_img {{shows&&"select_img_rotate"}}' src='../../images/三角形.png'></image>
    </view>
    <view class='option_box' style='height:{{shows?(selectDatas.length>5?300:selectDatas.length*60):0}}rpx;'>
      <text class='option' style='{{indexs==selectDatas.length-1&&"border:0;"}}' wx:for='{{selectDatas}}' wx:key='this'
        data-index='{{index}}' catchtap='optionTaps'>{{item}}</text>
    </view>
  </view>
</view>
<van-button plain hairline type="primary" bindtap="xuan">随机选餐</van-button>
<view class='suijican'>{{suiji}}</view>


<van-divider contentPosition="center" customStyle="color: #1989fa; border-color: #1989fa; font-size: 18px;">
  手动随机
</van-divider>

<form bindsubmit='addForm'>
  <input type='text' name='cai' placeholder="请输入想吃的菜名"></input>
  <view class='add'>
    <button formType="submit" type='primary'>点击提交</button>
  </view>
  <view>已添加的菜：{{cardTypeDict}}</view>
</form>
<van-button plain hairline type="primary" bindtap="shou">手动随机</van-button>
<view>{{shou}}</view>